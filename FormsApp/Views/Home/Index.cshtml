@model IEnumerable<Product> //List<Product>

@{
    ViewData["Title"] = "Home Page";
}

@* category selection *@
    <div class="card card-body my-3">

        <form asp-action="Index" method="get">
            <div class="container">
                <div class="row">
                    <div class="col-md-11">
                        <select class="form-select" name="category" asp-items="ViewBag.Categories"> @* urlye category eklenir name ile *@
                            <option value="0">Hepsi</option>
                        </select>
                    </div>
                    <div class="col-md-1">
                        <button type="submit" class="btn btn-primary">Filtrele</button>
                    </div>
                </div>
            </div>
        </form>

    </div>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th width="100px;">@Html.DisplayNameFor(m => m.ProductId) </th>
                <th width="100px;">@Html.DisplayNameFor(m => m.Image) </th>
                <th>@Html.DisplayNameFor(m => m.Name) </th>
                <th width="100px;">@Html.DisplayNameFor(m => m.Price) </th>
                <th width="130px;"></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var product in @Model)
        {
                <tr>
                    <td>@product.ProductId</td>
                    <td>
                        <img src="~/img/@product.Image" class="img-fluid" alt="">
                    </td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>
                        <a href="" class="btn btn-sm btn-primary">Edit</a>
                        <a href="" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
        }
        </tbody>
    </table>
